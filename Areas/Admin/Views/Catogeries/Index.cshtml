@model IEnumerable<Bullky.Models.Models.Catogery>

@{
    ViewData["Title"] = "Index";
}

<h1>All Catogery</h1>

<p>
    <a class="btn btn-outline-dark" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderItem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderItem)
            </td>
            <td>
                    <a asp-action="Edit"  class="btn btn-primary" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger"  asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
