@model Bullky.Models.Models.Company

@{
    //ViewData["Title"] = "Create";
}

<h1>@(Model.Id != 0 ? "Update" : "Create") Product </h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-lg-12">
        <form asp-action="Upsert" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="@Model.Id" type="hidden" />
           
            <div class="row">
                <div class="col-lg-10">
                    <div class="form-group my-2">
                        <label asp-for="@Model.Name" class="control-label"></label>
                        <input asp-for="@Model.Name" class="form-control shadow" />
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group my-2">
                        <label asp-for="@Model.StreetAddress" class="control-label"></label>
                        <textarea asp-for="@Model.StreetAddress" class="form-control"></textarea>
                        <span asp-validation-for="@Model.StreetAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group my-2">
                        <label asp-for="@Model.City" class="control-label"></label>
                        <input asp-for="@Model.City" class="form-control shadow" />
                        <span asp-validation-for="@Model.City" class="text-danger"></span>
                    </div>
                    <div class="form-group my-2">
                        <label asp-for="@Model.State" class="control-label"></label>
                        <input asp-for="@Model.State" class="form-control shadow" />
                        <span asp-validation-for="@Model.State" class="text-danger"></span>
                    </div>
                    <div class="form-group my-2">
                        <label asp-for="@Model.PostalCode" class="control-label"></label>
                        <input asp-for="@Model.PostalCode" class="form-control shadow" />
                        <span asp-validation-for="@Model.PostalCode" class="text-danger"></span>
                    </div>
            </div>


            <div class="form-group my-2">
                @if (Model.Id != 0)
                {
                    <input type="submit" value="Update" class="btn btn-primary" />

                }
                else
                {
                    <input type="submit" value="Create" class="btn btn-primary" />

                }
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

